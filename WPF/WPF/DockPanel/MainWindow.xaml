<Window x:Class="DockPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel LastChildFill="True">
        <Button DockPanel.Dock="Top" HorizontalAlignment="Left">Menu</Button>
        <Button DockPanel.Dock="Top" HorizontalAlignment="Right">Menu</Button>
        <Button DockPanel.Dock="Bottom">StatusBar</Button>
        <Button DockPanel.Dock="Right">ListBox</Button>
        <Button DockPanel.Dock="Left">ListBox</Button>
        <Button>RichTextBox</Button>
    </DockPanel>
</Window>
