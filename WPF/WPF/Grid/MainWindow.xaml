<Window x:Class="Grid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition><!--proportional size-->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <Button Grid.Row="0" Grid.Column="0" Margin="10">button1</Button>
        <Button Grid.Row="1" Grid.Column="0" Margin="10">button2</Button>
        <Button Grid.Row="2" Grid.Column="0" Margin="10">button3</Button>
        <Button Grid.Row="0" Grid.Column="1" Margin="10">button4</Button>
        <Button Grid.Row="1" Grid.Column="1" Margin="10">button5</Button>
        <Button Grid.Row="2" Grid.Column="1" Margin="10">button6</Button>
    </Grid>
</Window>
