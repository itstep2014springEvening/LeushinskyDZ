<Window x:Class="example.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Открыть"></MenuItem>
                <MenuItem Header="Закрыть"></MenuItem>
            </MenuItem>
            <MenuItem Header="Справка">
                <MenuItem Header="О программе"></MenuItem>
            </MenuItem>
        </Menu>
        
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Margin="5" MinWidth="50">Ok</Button>
            <Button Margin="5" MinWidth="70">Cancel</Button>
        </StackPanel>
        <StatusBar DockPanel.Dock="Bottom">
            
        </StatusBar>
        <TextBox Margin="3" Foreground="Brown">Ahahaha ololo atatata</TextBox>
    </DockPanel>
</Window>
